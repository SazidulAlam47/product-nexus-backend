{
    "name": "product-nexus",
    "version": "1.0.0",
    "description": "A backend system for comprehensive product lifecycle management",
    "keywords": [
        "e-commerce",
        "backend",
        "node.js",
        "mongodb",
        "product management"
    ],
    "author": "Sazidul Alam",
    "license": "ISC",
    "type": "commonjs",
    "main": "scr/server.ts",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "lint": "eslint src/ --fix",
        "format": "prettier --ignore-path .gitignore --write \"src/**/*.+(ts|json)\"  \"*.+(mjs|json)\""
    },
    "dependencies": {
        "cloudinary": "^2.7.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "express": "^5.1.0",
        "http-status": "^2.1.0",
        "mongoose": "^8.16.3",
        "multer": "^2.0.1",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/mongoose": "^5.11.97",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.0.13",
        "@typescript-eslint/eslint-plugin": "^8.36.0",
        "@typescript-eslint/parser": "^8.36.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "globals": "^16.3.0",
        "prettier": "^3.6.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.36.0"
    }
